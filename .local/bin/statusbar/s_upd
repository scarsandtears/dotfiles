#!/bin/bash

NUM_UPDATES=$( (checkupdates 2>/dev/null; yay -Qua 2>/dev/null) | wc -l )
if [ "$NUM_UPDATES" -gt 0 ]; then
    echo "î¬© $NUM_UPDATES"
fi

case $BLOCK_BUTTON in
    1) setsid -f st -n spterm -g 90x20 -e sh -c "yay -Syu && kill -42 $(pidof dwmblocks) >/dev/null 2>&1 && setxkbmap br; exec zsh" ;;
    2) xdotool key --clearmodifiers "Super_L+Shift+Return" ;;
    3) notify-send "UPDATES AVAILABLE:" "$( (checkupdates 2>/dev/null; yay -Qua 2>/dev/null) | awk '{print $1}')" ;;
    6) st -e nvim "$0" ;;
esac
